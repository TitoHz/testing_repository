def add(a,b):
    try:
        c = a + b
        print("The total sum is: ", c)
    except:
        print("Invalid Input")

try:
    s = int(input("Type the first number ----> "))
    d = int(input("Type the second number ----> "))
except:
    print("check again the number that you typed.")

add(s,d)


